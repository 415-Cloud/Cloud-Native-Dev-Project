// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workout {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  type      String
  distance  Float?
  duration  Int
  calories  Int?
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("workouts")
}

